<h2><%= @post.title %></h2>
<article>
  <%= @post.content %>
</article>
<div class="links">
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>

<% if @post.comments.any? %>
    <h3>Comments</h3>
    <%= render :partial => 'comments/comment', :collection => @post.comments %>
<% end %>
<h3>Add new comment</h3>
<%= render :partial => 'comments/form' %>